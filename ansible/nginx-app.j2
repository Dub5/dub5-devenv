server {
    server_name *.lvh.me;

    listen 3000;
    listen 3443 ssl;

    ssl_certificate     /home/vagrant/selfsigned.crt;
    ssl_certificate_key /home/vagrant/selfsigned.key;

    client_max_body_size 10M;

    passenger_enabled on;

    rails_env    development;
    root         /vagrant/{{ sitename }}/public;

    # redirect server error pages to the static page /50x.html
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   html;
    }
}
